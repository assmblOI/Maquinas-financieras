        // Chart Configuration
        const ctx = document.getElementById('growthChart').getContext('2d');
        
        // Responsive Font Size for Chart
        const getFontSize = () => window.innerWidth < 768 ? 10 : 12;

        const years = [1, 2, 3, 5, 10, 20];
        const premiums = [8400, 16800, 25200, 42000, 84000, 193398]; 
        const cashValues = [4604, 10011, 16382, 30001, 68631, 163822]; 

        const chart = new Chart(ctx, {
            type: 'line',
            data: {
                labels: years.map(y => 'A√±o ' + y),
                datasets: [
                    {
                        label: 'Costo Acumulado',
                        data: premiums,
                        borderColor: '#b91c1c', 
                        borderDash: [5, 5],
                        backgroundColor: 'transparent',
                        borderWidth: 2,
                        pointRadius: 3,
                        tension: 0.3
                    },
                    {
                        label: 'Efectivo Disponible',
                        data: cashValues,
                        borderColor: '#15803d', 
                        backgroundColor: 'rgba(21, 128, 61, 0.1)',
                        borderWidth: 3,
                        pointRadius: 4,
                        fill: true,
                        tension: 0.3
                    }
                ]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'bottom',
                        labels: { boxWidth: 12, padding: 15 }
                    },
                    title: {
                        display: true,
                        text: 'Crecimiento de Capital vs Costo',
                        font: { size: 16 }
                    },
                    tooltip: {
                        mode: 'index',
                        intersect: false,
                        padding: 10,
                        backgroundColor: 'rgba(0,51,102, 0.9)'
                    }
                },
                scales: {
                    x: {
                        ticks: { font: { size: 11 } }
                    },
                    y: {
                        beginAtZero: true,
                        ticks: {
                            callback: function(value) { return '$' + value/1000 + 'k'; }, // Shorten numbers for mobile
                            font: { size: 11 }
                        }
                    }
                }
            }
        });

        // Loan Logic
        let loanActive = false;
        const originalDB = 355251; 
        const loanAmount = 10000;

        function toggleLoan() {
            loanActive = !loanActive;
            const btn = document.querySelector('.btn');
            const dbDisplay = document.getElementById('deathBenefitDisplay');
            const statusText = document.getElementById('loanStatusText');
            const explanation = document.getElementById('loanExplanation');
            const dbNote = document.getElementById('dbNote');

            if (loanActive) {
                // Active State
                btn.innerHTML = "üîÑ Restaurar P√≥liza (Pagar Pr√©stamo)";
                btn.style.backgroundColor = "#D4AF37"; // Gold color
                
                const netDB = originalDB - loanAmount;
                dbDisplay.innerText = '$' + netDB.toLocaleString();
                dbDisplay.style.color = '#D4AF37'; 
                dbNote.innerText = 'Reducido por colateral';
                
                statusText.innerText = 'Pr√©stamo Activo: $10,000';
                statusText.style.color = '#b91c1c';
                
                explanation.innerHTML = `
                    ‚úÖ <strong>$10,000 en su bolsillo.</strong><br>
                    ‚úÖ <strong>$68,631 siguen ganando intereses.</strong><br>
                    [span_9](start_span)‚ÑπÔ∏è El seguro de vida act√∫a como colateral. Si usted fallece hoy, el pr√©stamo se paga del beneficio de muerte.[span_9](end_span)
                `;
            } else {
                // Reset State
                btn.innerHTML = "üëâ Tocar para Solicitar $10,000";
                btn.style.backgroundColor = "#003366"; // Blue color
                
                dbDisplay.innerText = '$' + originalDB.toLocaleString();
                dbDisplay.style.color = '#15803d';
                dbNote.innerText = 'Beneficio Completo';
                
                statusText.innerText = 'Sin Pr√©stamos';
                statusText.style.color = '#15803d';
                
                explanation.innerHTML = 'Su dinero est√° seguro y creciendo. Usted tiene acceso total a su capital sin preguntas bancarias.';
            }
        }
    </script>
